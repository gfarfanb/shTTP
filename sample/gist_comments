#! /usr/bin/env bash
#  -author Giovanni Farf√°n B.

before_api() {
    basePath "/gists/$( get gistId )/comments"
}

get_all() {
    :
}

get_comment() {
    endpoint "/$( get commentId )"
}

before_post_comment() {
    :
}

post_comment() {
    headers \
        "Authorization: token $( get token )" \
        "Accept: application/vnd.github.$( get apiVersion ).full+json" \
        "Content-Type: application/vnd.github.$( get apiVersion ).full+json"
    body '{ "body": "**shTTP-samples** comment" }'
}

after_post_comment() {
    isTrue "Id not found" "\"$( getOutput id )\" != \"null\""
    put commentId '.id'
}

patch_comment() {
    endpoint "/$( get commentId )"
    body '{ "body": "shTTP comment update" }'
}

delete_comment() {
    endpoint "/$( get commentId )"
}

after_api() {
    :
}

flow_comments() {
    :
}

#  shellcheck disable=SC1091
. ../http_api
