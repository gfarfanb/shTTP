#  -test List available commands
declared_command() {
    :
}

_commands=$( _list_commands )
_found=0

for _i in "${_commands[@]}"; do
    [ "$_i" = "declared_command" ] && _found=1
done

assertEquals "Command not found" 1 "$_found"


